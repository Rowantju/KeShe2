        <Button x:Name="help_button" Content="游戏说明与帮助" HorizontalAlignment="Left" Margin="1107,31,0,0" VerticalAlignment="Top" Height="53" Width="183" FontSize="20" Background="#FF913232" Opacity="0.5" BorderThickness="0" Click="help_button_Click"/>
