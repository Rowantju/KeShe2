        	<LineBreak/>
        	<Run Text="   "/>
        	<Run Text="-"/>
        	<Run Text=" "/>
        	<Run Text="ch"/>
        	<Run Text="untju"/>
        	<LineBreak/>
        	<Run Text="   -"/>
        	<Run Text=" "/>
        	<Run Text="Pool"/>
        	<LineBreak/>
        	<Run Text="   "/>
        	<Run Text="-"/>
        	<Run Text=" "/>
        	<Run Text="Feiyu"/>
        </TextBlock>
        <Button x:Name="play_button" Content="" HorizontalAlignment="Left" Margin="942,464,0,0" VerticalAlignment="Top" Height="72" Width="220" Opacity="0.3" BorderThickness="0" Click="play_button_Click"/>
        <Image x:Name="game_image" HorizontalAlignment="Left" Height="371" Margin="174,165,0,0" VerticalAlignment="Top" Width="554" Source="Assets/begin_image.jpg"/>
        <TextBlock HorizontalAlignment="Left" Margin="174,598,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="68" Width="420" FontSize="24" FontFamily="Berlin Sans FB">
        	<Run Text="啊！！！这是在哪啊？"/>
